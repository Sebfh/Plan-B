<% content_for :nav_action_left do %>
  <% if current_user %>	
	  <%= link_to "Map", locations_path, :class => 'nav-button' %>
	<% end %>
<%end%>
<% content_for :nav_action_right do %>
  <% if current_user %>	
	  <%= link_to "Edit", edit_plan_path(@plan), :class => 'nav-button' %>
	<% end %>
<%end%>

<h2><%= @plan.title %></h2>
<span class="when">
	<% if Time.now > @plan.starts_at %>
	<%= distance_of_time_in_words(Time.now, @plan.starts_at) %> ago, by <%= @plan.user.name %>
	<% else %>
	in <%= distance_of_time_in_words(Time.now, @plan.starts_at) %>, by <%= @plan.user.name %>
	<% end %>
</span>

<p><% if @plan.location %>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=150x150&sensor=false&zoom=16&markers=#{@plan.location.latitude}%2C#{@plan.location.longitude}", :id => "location-small" %>
<% end %>
<%= @plan.description %></p>