<div class="plan-item <%= cycle('odd', 'even') %> clearfix">
  	<div class="calendar">
    	<time datetime="<%= plan.starts_at.to_s %>">
      		<div class="month">
				<%= plan.starts_at.strftime( "%b" ) %>
      		</div>
      		<div class="day">
        		<%= plan.starts_at.day %>
      		</div>
    	</time>
  	</div>
	<div class="linkr">
		<%= link_to '>', plan_path(plan) %> <!-- vervangen door een arrow img -->
	</div>
  	<div class="desc">
  		<h3><%= plan.title %></h3>
  		<span class="when">
			<% if Time.now > plan.starts_at %>
			<%= distance_of_time_in_words(Time.now, plan.starts_at) %> ago
			<% else %>
			in <%= distance_of_time_in_words(Time.now, plan.starts_at) %>
			<% end %>
  		</span>
  		<p><%= plan.description.truncate(50,:separator => ' ',:omission => "... (meer)") %></p>
  	</div>
	
</div>