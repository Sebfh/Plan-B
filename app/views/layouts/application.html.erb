<!DOCTYPE html>
<html>
<head>
  <title>Planb</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'add2home.js' %>
  <%= csrf_meta_tag %>
<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-touch-fullscreen" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <link rel="apple-touch-startup-image" href="images/loading.png" />
  <link rel="apple-touch-icon" href="images/icon.png" />
	<link rel="icon" type="image/png" id="favicon" href="images/icon16.png"/>
</head>
<body>
	<div id="container">
		<div id="app-bar">
			<%= image_tag("planb-logo.png", :id => 'planblogo') %>
			<% if current_user %>	
				<%= link_to "sign out", signout_path, :id => 'signout' %>
				<% end %>
		</div>
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		<div id="content">
			<% if !current_user %>
				<%= link_to(image_tag("/images/fb-connect-large.png"), "/auth/facebook", :id => 'fb-button') %>
			<% else %>
				<%= yield %>
			<% end %>
		</div>
	</div>
</body>
</html>
