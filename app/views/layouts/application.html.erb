<!DOCTYPE html>
<html>
<head>
  <title>Planb</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-touch-fullscreen" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <link rel="apple-touch-startup-image" href="images/loading.png" />
  <link rel="apple-touch-icon" href="images/icon.png"/>
</head>
<body>
	<div id="container">
		<div id="app_bar">logo
			<% if current_user %>	
				<%= link_to "Sign Out", signout_path %>
				<% end %>
		</div>
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		<div id="user_nav" style="display:none;">
			<% if current_user %>
			Welcome <%= image_tag(current_user.image_uri) %> <%= current_user.name %>!
			<% end %>
		</div>
		<div id="content">
		
			<% if !current_user %>
			<%= link_to(image_tag("/images/fb-connect-large.png"), "/auth/facebook") %>
			<% else %>
			<%= yield %>
			<% end %>
		</div>
	</div>
</body>
</html>
